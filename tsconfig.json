{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom"],
        "types": ["reflect-metadata", "node"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["./src/**/*"],
    "exclude": ["dist"]
}
